
@model IEnumerable<HRM.Models.LoanApproval>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var list = (Model ?? Enumerable.Empty<HRM.Models.LoanApproval>()).ToList();
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">📋 Employee Loan Application List</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="FromDate" class="form-label fw-semibold">From Date</label>
                            <input type="date" id="FromDate" name="FromDate" class="form-control"
                                   value="@Model?.FirstOrDefault()?.FromDate ?? DateTime.Today.ToString(" yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="ToDate" class="form-label fw-semibold">To Date</label>
                            <input type="date" name="FromDate" class="form-control"
                                   value="@DateTime.Today.ToString("MM/dd/yyyy")" />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-eye"></i> Show
                            </button>
                            <button type="reset" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-x-circle"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Employee Name</th>
                                <th>Appli Date</th>
                                <th>Branch</th>
                                <th>LoanId</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!list.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center">No data found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var pair in list.Select((x, i) => (item: x, idx: i + 1)))
                                {
                                    var item = pair.item;
                                    var idx = pair.idx;

                                    var appliDate = string.IsNullOrEmpty(item.AppliDate) ? "" : item.AppliDate;

                                    // Derived calculations
                                    var interestAmount = (item.LoanApproved * item.interest) / 100;
                                    var monthlyInterest = item.Term > 0 ? (interestAmount / (item.Term * 12)) : 0;
                                    var monthlyPrincipal = item.Term > 0 ? (item.LoanApproved / (item.Term * 12)) : 0;

                                    <tr>
                                        <td>@idx</td>
                                        <td>@item.EmployeeName</td>
                                        <td>@appliDate</td>
                                        <td>@item.Branch</td>
                                        <td>@item.LoanId</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm"
                                                    onclick="edit(
                                                                '@item.Id',
                                                                '@item.ApplicationId',
                                                                '@item.DateOfLoan',
                                                                '@item.LoanApproved',
                                                                '@item.interest',
                                                                '@String.Format("{0:0.00}", interestAmount)',
                                                                '@item.Term',
                                                                '@String.Format("{0:0.00}", monthlyInterest)',
                                                                '@String.Format("{0:0.00}", monthlyPrincipal)',
                                                                '@item.PdfPath',
                                                                '@item.EmployeeId'
                                                            )"
                                                    data-bs-toggle="modal" data-bs-target="#addModal">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : #f9f9fb;">
                <h5 class="modal-title" id="addModalLabel">Loan Issue List</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateOrUpdate" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id" readonly>

                    <div class="col-md-12 mt-2" style="display:none">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="EmployeeId" class="form-label">Employee Id</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="EmployeeId" name="EmployeeId" readonly>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label class="form-label">Upload Files</label>
                            </div>
                            <div class="col-md-6" id="fileInputs">
                                <div class="input-group mb-2 file-input-row">
                                    <input type="file" name="PdfFiles" multiple class="form-control form-control-sm" accept=".pdf,.doc,.docx,.jpg,.png">
                                    <span class="input-group-text" style="cursor:pointer;" onclick="removeFile(this)">
                                        <i class="fa fa-times text-danger"></i>
                                    </span>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12 text-end">
                                <button type="button" class="btn btn-sm btn-primary" onclick="addMoreFile()">+ Add More</button>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="DateOfLoan" class="form-label">Date of Issue</label>
                            </div>
                            <div class="col-md-6">
                                <input type="date" class="form-control form-control-sm" id="DateOfLoan" name="DateOfLoan" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="ApplicationId" class="form-label">Application ID</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="ApplicationId" name="ApplicationId" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="LoanAmount" class="form-label">Loan Amount</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="LoanAmount" name="LoanAmount" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Interest" class="form-label">Interest %age</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="Interest" name="Interest" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="InterestAmount" class="form-label">Interest Amount</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="InterestAmount" name="InterestAmount" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Term" class="form-label">Term of Loan (In Year)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="Term" name="Term" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="EmiInterest" class="form-label">EMI (Interest Per Month)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="EmiInterest" name="EmiInterest" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="EmiPrinciple" class="form-label">EMI (Principle)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="EmiPrinciple" name="EmiPrinciple" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="NetEmi" class="form-label">Net EMI</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="NetEmi" name="NetEmi" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex mt-3 mt-2">
                        <button type="submit" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>







@section Scripts {

    <script>
        $(function(){
            $('.datepicker').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true
            });
            // Set default date to today
            $('#FromDate').datepicker('setDate', new Date());
            $('#ToDate').datepicker('setDate', new Date());
        });

        document.getElementById("DateOfLoan").value = new Date().toISOString().split('T')[0];



                                                                function edit(id, applicationId, dateOfLoan, loanAmount, interest, interestAmount, term, emiInterest, emiPrinciple, PdfPath, employeeId) {
            document.getElementById("Id").value = id;
            document.getElementById("ApplicationId").value = applicationId;
            document.getElementById("DateOfLoan").value = dateOfLoan;
            document.getElementById("LoanAmount").value = loanAmount;
            document.getElementById("Interest").value = interest;
            document.getElementById("InterestAmount").value = interestAmount;
            document.getElementById("Term").value = term;

            // EMI Interest (calculated OR passed)
            document.getElementById("EmiInterest").value = parseFloat(emiInterest).toFixed(2);

            // EMI Principle
            document.getElementById("EmiPrinciple").value = parseFloat(emiPrinciple).toFixed(2);

            // Net EMI
            let netEmi = parseFloat(emiInterest) + parseFloat(emiPrinciple);
            document.getElementById("NetEmi").value = netEmi.toFixed(2);

            // File Path (for showing uploaded file if exists)
            if (PdfPath && PdfPath !== "") {
                document.getElementById("PdfPreview").innerText = PdfPath;
            }

            document.getElementById("EmployeeId").value = employeeId;

            document.getElementById("addModalLabel").textContent = "Edit Loan";
            document.getElementById("modalSubmitText").textContent = "Update";
        }









            document.querySelectorAll('.submitForm').forEach(function (form) {
                    form.addEventListener('submit', function (e) {
                        e.preventDefault();
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "This will Recommend Loan Application.",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, submit it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            }
                        });
                    });
                });


                //Start Add Multi file 

                                    function addMoreFile() {
            const fileDiv = document.getElementById("fileInputs");

            const wrapper = document.createElement("div");
            wrapper.className = "input-group mb-2 file-input-row";

            const input = document.createElement("input");
            input.type = "file";
            input.name = "PdfFiles";           // IMPORTANT: same name as model property
            input.className = "form-control form-control-sm";
            input.accept = ".pdf,.doc,.docx,.jpg,.png";
            input.multiple = true;            // optional: allow multi-select on each input

            const span = document.createElement("span");
            span.className = "input-group-text";
            span.style.cursor = "pointer";
            span.innerHTML = '<i class="fa fa-times text-danger"></i>';
            span.onclick = function() { removeFile(span); };

            wrapper.appendChild(input);
            wrapper.appendChild(span);

            fileDiv.appendChild(wrapper);
        }

        function removeFile(element) {
            // more robust than parentElement.remove()
            const row = element.closest('.file-input-row');
            if (row) row.remove();
        }
        //End Add Multi file

    </script>
}

