@model IEnumerable<HRM.Models.LoanApproval>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <style>
    .form-label,
    .form-control {
        font-size: 0.65rem; /* smaller font */
    }
</style> *@


<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">📋 Employee Loan Application List</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="FromDate" class="form-label fw-semibold">From Date</label>
                            <input type="date" id="FromDate" name="FromDate" class="form-control"
                                   value="@Model?.FirstOrDefault()?.FromDate ?? DateTime.Today.ToString(" yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="ToDate" class="form-label fw-semibold">To Date</label>
                            <input type="date" name="FromDate" class="form-control"
                                   value="@DateTime.Today.ToString("MM/dd/yyyy")" />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-eye"></i> Show
                            </button>
                            <button type="reset" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-x-circle"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Empp Id</th>
                                <th>Employee Name</th>
                                <th>Appli Date</th>
                                <th>Branch</th>
                                <th>LoanId</th>
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                                foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.EmployeeName</td>
                                        <td>@item.AppliDate</td>
                                        <td>@item.Branch</td>
                                        <td>@item.LoanId</td>
                                        <td>@item.Remarks</td>
                                        <td>
                                        <td>
                                            <button class="btn btn-warning btn-sm"
                                                    onclick="edit('@item.Id',
        '@item.LoanApproved',
        '@item.interest',
        '@String.Format("{0:0.00}", (item.LoanApproved * item.interest) / 100)',
        '@item.Term',
        '@String.Format("{0:0.00}", ((item.LoanApproved * item.interest) / 100) / item.Term)',
        '@String.Format("{0:0.00}", (item.LoanApproved / item.Term))')"
                                                    data-bs-toggle="modal" data-bs-target="#addModal">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>

                                        </td>


                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : #f9f9fb;">
                <h5 class="modal-title" id="addModalLabel">Loan Issue List</h5>
            </div>
            <div class="modal-body">
                <form asp-action="Inser" method="post">
                    <input type="hidden" id="Id" name="Id" readonly>

                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="DateOfLoan" class="form-label">Date of Issue</label>
                            </div>
                            <div class="col-md-6">
                                <input type="date" class="form-control form-control-sm" id="DateOfLoan" name="DateOfLoan" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="ApplicationId" class="form-label">Application ID</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="ApplicationId" name="ApplicationId" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="LoanAmount" class="form-label">Loan Amount</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="LoanAmount" name="LoanAmount" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Interest" class="form-label">Interest %age</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="Interest" name="Interest" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="InterestAmount" class="form-label">Interest Amount</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="InterestAmount" name="InterestAmount" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Term" class="form-label">Term of Loan (In Year)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="Term" name="Term" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="EmiInterest" class="form-label">EMI (Interest)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="EmiInterest" name="EmiInterest" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="EmiPrinciple" class="form-label">EMI (Principle)</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="EmiPrinciple" name="EmiPrinciple" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="NetEmi" class="form-label">Net EMI</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-sm" id="NetEmi" name="NetEmi" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex mt-3 mt-2">
                        <button type="submit" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>







@section Scripts {

    <script>
        $(function(){
            $('.datepicker').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true
            });
            // Set default date to today
            $('#FromDate').datepicker('setDate', new Date());
            $('#ToDate').datepicker('setDate', new Date());
        });

        document.getElementById("DateOfLoan").value = new Date().toISOString().split('T')[0];



                                                        function edit(id, loanAmount, interest, interestAmount, term) {
            document.getElementById("Id").value = id;
            document.getElementById("ApplicationId").value = id;

            document.getElementById("LoanAmount").value = loanAmount;
            document.getElementById("Interest").value = interest;
            document.getElementById("InterestAmount").value = interestAmount;
            document.getElementById("Term").value = term;

            let months = term * 12; // Term in months

            // EMI Interest
            let emiInterestRaw = (parseFloat(loanAmount) * parseFloat(interest)) / 100 / months;
            let emiInterest = Math.floor(emiInterestRaw);
            if (emiInterestRaw - emiInterest >= 0.56) emiInterest += 1;

            // EMI Principle
            let emiPrincipleRaw = parseFloat(loanAmount) / months;
            let emiPrinciple = Math.floor(emiPrincipleRaw);
            if (emiPrincipleRaw - emiPrinciple >= 0.56) emiPrinciple += 1;

            // Net EMI
            let netEmi = emiInterest + emiPrinciple;

            document.getElementById("EmiInterest").value = emiInterest.toFixed(2);
            document.getElementById("EmiPrinciple").value = emiPrinciple.toFixed(2);
            document.getElementById("NetEmi").value = netEmi.toFixed(2);

            document.getElementById("addModalLabel").textContent = "Edit Loan";
            document.getElementById("modalSubmitText").textContent = "Update";
        }








            document.querySelectorAll('.submitForm').forEach(function (form) {
                    form.addEventListener('submit', function (e) {
                        e.preventDefault();
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "This will Recommend Loan Application.",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, submit it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            }
                        });
                    });
                });

    </script>
}

