@model IEnumerable<HRM.Models.Employee>
@{
    ViewData["Title"] = "GetEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Employee List</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Photo</th>
                                <th>Emp Name</th>
                                <th>Father Name</th>
                                <th>Mother Name</th>
                                <th>Spouse Name</th>
                                <th>DOB</th>
                                <th>Blood Group</th>
                                <th>Gender</th>
                                <th>Marital Status</th>
                                <th>Tin No</th>
                                <th>National ID</th>
                                <th>Telephone (Resi)</th>
                                <th>Mobile No</th>
                                <th>Mail ID</th>
                                <th>Permanent Address</th>
                                <th>Present Address</th>
                                <th>Posting</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th>Date of Appointment</th>
                                <th>Religion</th>
                                <th>Nationality</th>
                                <th>Shift</th>
                                <th>Version</th>
                                <th>Job Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        @{
                                            var photoPath = string.IsNullOrEmpty(item.UploadPhoto)
                                            ? Url.Content("~/profile/default/defaultPic.jpg")
                                            : Url.Content("~/profile/" + item.UploadPhoto);
                                        }
                                        <img src="@photoPath"
                                             alt="Employee Photo"
                                             style="height: 80px; width: 80px; object-fit: contain; object-position: center; border-radius: 4px;" />



                                    </td>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.FatherName</td>
                                    <td>@item.MotherName</td>
                                    <td>@item.SpouseName</td>
                                    <td>@item.DOB</td>
                                    <td>@item.Gender</td>
                                    <td>@item.BloodGroup</td>
                                    <td>@item.MaritalStatus</td>
                                    <td>@item.TinNo</td>
                                    <td>@item.NationalID</td>
                                    <td>@item.Telephone</td>
                                    <td>@item.MobileNo</td>
                                    <td>@item.MailID</td>
                                    <td>@item.PermanentAddress</td>
                                    <td>@item.PresentAddress</td>
                                    <td>@item.Branch</td>
                                    <td>@item.Department</td>
                                    <td>@item.Designation</td>
                                    <td>@item.DateOfAppointment.ToString("dd-MM-yyyy")</td>
                                    <td>@item.Religion</td>
                                    <td>@item.Nationality</td>
                                    <td>@item.Shift</td>
                                    <td>@item.Version</td>
                                    <td>@item.JobType</td>
                                    <td class="text-center align-middle">
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <a asp-action="Index" asp-route-empId="@item.EmpId" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>



                                            <form asp-action="DeleteEmployee" method="post" class="deleteForm mb-0">
                                                <input type="hidden" name="ID" value="@item.EmpId" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Delete
                                                </button>
                                            </form>

                                         
                                        </div>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
               function setValue(id, value) {
        document.getElementById(id).value = value || "";
    }

    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.deleteForm').forEach(function (form) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the Employee.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    });
</script>
