@model IEnumerable<HRM.Models.OffDays>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Leave List</h5>
            <button class="btn btn-primary btn-sm" id="addNewData" data-bs-toggle="modal"
                    data-bs-target="#addModal">
                <i class="fas fa-solid fa-plus"></i> Add New
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table  datanew">
                    <thead class="table-primary">
                        <tr>
                            <th>SL No.</th>
                            <th>Off Days</th>
                            <th>Branch</th>
                            <th>Designation</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var item in Model)
                        {
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@item.OffDay</td>
                                <td>@item.Branch</td>
                                <td>@item.Designation</td>
                                <td>@item.Department</td>
                                <td class="d-flex align-items-center gap-2">
                                    <button class="btn btn-warning btn-sm"
                                            onclick="editBranch('@item.Id', '@item.BranchId')"
                                            data-bs-toggle="modal" data-bs-target="#addDepartmentModal">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <form asp-action="Delete" method="post" class="deleteForm">
                                        <input type="hidden" name="ID" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : #f9f9fb;">
                <h5 class="modal-title" id="addModalLabel">Add Late/Early Login/Logout Punishment</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateOrUpdate" method="post">
                    <input type="hidden" id="Id" name="Id" readonly>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="BranchId" class="form-label">Select Branch</label>
                            <select id="BranchId" name="BranchId" class="form-control" required>
                                <option value="">-- Select Branch --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.BranchList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="DesignationId" class="form-label">Select Designation</label>
                            <select id="DesignationId" name="DesignationId" class="form-control" required>
                                <option value="">-- Select Designation --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.DesignationList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="DepartmentId" class="form-label">Select Department</label>
                            <select id="DepartmentId" name="DepartmentId" class="form-control" required>
                                <option value="">-- Select Branch --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.DepartmentList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label d-block">Days :</label>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Sunday" name="OffDayList" value="Sunday">
                                <label class="form-check-label" for="day1">Sunday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Monday" name="OffDayList" value="Monday">
                                <label class="form-check-label" for="day2">Monday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Tuesday" name="OffDayList" value="Tuesday">
                                <label class="form-check-label" for="day3">Tuesday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Wednesday" name="OffDayList" value="Wednesday">
                                <label class="form-check-label" for="day4">Wednesday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Thursday" name="OffDayList" value="Thursday">
                                <label class="form-check-label" for="day5">Thursday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Friday" name="OffDayList" value="Friday">
                                <label class="form-check-label" for="day6">Friday</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Saturday" name="OffDayList" value="Saturday">
                                <label class="form-check-label" for="day7">Saturday</label>
                            </div>
                        </div>

                    </div>
                    
                    <div class="d-flex">
                        <button type="submit" class="btn btn-success btn-sm me-2">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function resetBranch() {
            let selectedDays = branch.OffDay ? branch.OffDay.split(",") : [];

                document.getElementById("Id").value = "";
        document.getElementById("BranchId").value = "";
        document.getElementById("DesignationId").value = "";
        document.getElementById("DepartmentId").value = "";

        document.querySelectorAll('input[name="OffDay"]').forEach(function (checkbox) {
            checkbox.checked = selectedDays.includes(checkbox.value);
        });

        document.getElementById("addModalLabel").textContent = "Add Branch";
        document.getElementById("modalSubmitText").textContent = "Submit";
        }

        document.getElementById("addNewData").addEventListener("click", function () {
            resetBranch();
        });

        function edit(id, name, address) {
            console.log("ID:", id);
            document.getElementById("Id").value = id;
            document.getElementById("Name").value = name;
            document.getElementById("Address").value = address;
            document.getElementById("addModalLabel").textContent = "Edit Branch";
            document.getElementById("modalSubmitText").textContent = "Update";
        }

        document.addEventListener("DOMContentLoaded", function () {
            var addBranchModal = document.getElementById("addModal");
            addBranchModal.addEventListener("hidden.bs.modal", function () {
                resetBranch();
            });
        });

        document.querySelectorAll('.deleteForm').forEach(function (form) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the branch.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });




             document.getElementById('AdjustmentType').addEventListener('change', function() {
            var leaveDiv = document.getElementById('leaveTypeDiv');
            var basicDiv = document.getElementById('basicSalaryDiv');

            if(this.value === 'Leave') {
                leaveDiv.style.display = 'block';
                basicDiv.style.display = 'none';
                // Make LeaveTypeId required, remove required from Basic checkbox
                document.getElementById('LeaveTypeId').required = true;
                document.getElementById('Basic').required = false;
            } else if(this.value === 'BasicSalary') {
                leaveDiv.style.display = 'none';
                basicDiv.style.display = 'block';
                // Make Basic checkbox required, remove required from LeaveTypeId
                document.getElementById('Basic').required = true;
                document.getElementById('LeaveTypeId').required = false;
            } else {
                leaveDiv.style.display = 'none';
                basicDiv.style.display = 'none';
                document.getElementById('LeaveTypeId').required = false;
                document.getElementById('Basic').required = false;
            }
        });


    </script>
}



