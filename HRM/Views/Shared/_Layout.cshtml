    <style>
        /* Shrink entire popup */
        .flatpickr-calendar {
            font-size: 12px !important;
            max-width: 220px !important;
        }

        /* Shrink day cells */
        .flatpickr-day,
        .flatpickr-weekday {
            padding: 4px !important;
            width: 28px !important;
            height: 28px !important;
            line-height: 28px !important;
        }

        /* Fix month and year container */
        .flatpickr-months {
            font-size: 13px !important;
        }

        /* Month navigation: arrows + text */
        .flatpickr-month {
            height: 28px !important;
            line-height: 28px !important;
        }

        /* Year input */
        .flatpickr-current-month input.cur-year {
            font-size: 12px !important;
            height: 24px !important;
            width: 50px !important;
        }

        /* Month name dropdown */
        .flatpickr-current-month .flatpickr-monthDropdown-months {
            font-size: 12px !important;
            height: 24px !important;
        }

        /* Optional: Time picker if enabled */
        .flatpickr-time {
            font-size: 12px !important;
        }







        /* Sidebar base link color */
        .sidebar-menu ul li a {
            color: #d4af37; /* Gold tone */
            transition: color 0.3s ease-in-out;
        }

        /* Submenu link colors */
        .sidebar-menu ul li ul li a {
            color: #d4af37;
        }

            /* Active link highlight */
            .sidebar-menu ul li ul li a.active-link {
                color: #FFD700; /* Bright gold for active link */
                font-weight: bold;
            }

        /* On hover */
        .sidebar-menu ul li a:hover {
            color: #FFD700 !important;
        }

        /* When submenu is open */
        .submenu.active > a,
        .submenu.active ul li a {
            color: #FFD700 !important;
        }

        /* Optional: active menu text */
        .sidebar-menu li.active > a {
            color: #FFD700;
        }

        /* side bar */




        /* Base color */
        .sidebar-menu ul li a {
            color: #d4af37;
            transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
        }

            /* Hover */
            .sidebar-menu ul li a:hover {
                color: #FFD700 !important;
            }

        /* Active Submenu Item (Clicked Page) */
        .sidebar-menu ul li ul li a.active-link {
            color: white !important; /* Text turns black */
            background-color: #FFD700; /* Bright gold background */
            border-radius: 5px;
            font-weight: 700;
            padding-left: 18px;
        }

        /* When submenu is open, show bright gold color */
        .submenu.active > a {
            color: #FFD700 !important;
            font-weight: 700;
        }

        /* Active top-level menu text (like “Settings”) */
        .sidebar-menu li.active > a {
            color: #FFD700;
            font-weight: 700;
        }

        /* Hover effect for submenu links */
        .sidebar-menu ul li ul li a:hover {
            background-color: rgba(255, 215, 0, 0.2);
            color: #FFD700 !important;
            border-radius: 5px;
        }

        /* Optional: arrow rotation when menu is open */
        .submenu.active > a .menu-arrow {
            transform: rotate(90deg);
            transition: transform 0.2s ease;
        }



    </style>
    @RenderSection("Styles", required: false)

