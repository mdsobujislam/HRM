@model IEnumerable<HRM.Models.PFInterest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">PF Interest Setup List</h5>
                <button class="btn btn-primary btn-sm" id="addNewData" data-bs-toggle="modal"
                        data-bs-target="#addPFSetupModal">
                    <i class="fas fa-solid fa-plus"></i> Add New
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Year</th>
                                <th>PF Interest (%age)</th>
                                <th>Branch</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var pf in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@pf.Year</td>
                                    <td>@pf.Interest</td>
                                    <td>@pf.Branch</td>
                                    <td class="d-flex align-items-center gap-2">
                                        <button class="btn btn-warning btn-sm"
                                                onclick="editPfInterest('@pf.Id','@pf.Year','@pf.Interest','@pf.BranchId')"
                                                data-bs-toggle="modal" data-bs-target="#addPFSetupModal">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>



                                        <form asp-action="DeletePFContri" method="post" class="deleteForm">
                                            <input type="hidden" name="ID" value="@pf.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addPFSetupModal" tabindex="-1" aria-labelledby="addPfContriModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : #f9f9fb;">
                <h5 class="modal-title" id="addPfContriModalLabel">Add Pf Contribution Setup</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateOrUpdatePFContri" method="post">
                    <input type="hidden" id="pfInterestId" name="Id">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="BranchId" class="form-label">Select Branch</label>
                            <select id="BranchId" name="BranchId" class="form-control" required>
                                <option value="">-- Select Branch --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.BranchList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="Year" class="form-label">Year</label>
                            <input type="number" class="form-control" id="Year" name="Year" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="Interest" class="form-label">PF Interest (%age)</label>
                            <input type="number" class="form-control" id="Interest" name="Interest" required>
                        </div>

                        
                    </div>

                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary btn-sm me-2" id="btnSave">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function editPfInterest(id, year, interest, branchId) {
        document.getElementById("pfInterestId").value = id;
        document.getElementById("Year").value = year;
        document.getElementById("Interest").value = interest;
        document.getElementById("BranchId").value = branchId;

        document.getElementById("addPfContriModalLabel").textContent = "Edit PF Interest Setup";
        document.getElementById("modalSubmitText").textContent = "Update";
    }


    document.querySelectorAll('.deleteForm').forEach(function (form) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the Department.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
</script>

