@model IEnumerable<HRM.Models.GratuityCalculateSetup>
@{
    ViewData["Title"] = "Gratuity Calculate Setup List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Gratuity Calculate Setup List</h5>
                <button class="btn btn-primary btn-sm" id="addNewData" data-bs-toggle="modal"
                        data-bs-target="#addPFSetupModal">
                    <i class="fas fa-solid fa-plus"></i> Add New
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Parameter</th>
                                <th>Year</th>
                                <th>Branch</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var pf in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@pf.SalaryHead</td>
                                    <td>@pf.MinYear</td>
                                    <td>@pf.Branch</td>
                                    <td class="d-flex align-items-center gap-2">
                                        <button class="btn btn-warning btn-sm"
                                                onclick="editGratuity('@pf.Id','@pf.SalaryHeadId','@pf.MinYear','@pf.BranchId')"
                                                data-bs-toggle="modal" data-bs-target="#addPFSetupModal">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>

                                        <form asp-action="DeletePFContri" method="post" class="deleteForm">
                                            <input type="hidden" name="ID" value="@pf.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="addPFSetupModal" tabindex="-1" aria-labelledby="addPfContriModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : #f9f9fb;">
                <h5 class="modal-title" id="addPfContriModalLabel">Add Gratuity Calculate Setup</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateOrUpdatePFContri" method="post">
                    <input type="hidden" id="gratuityId" name="Id">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="BranchId" class="form-label">Select Branch</label>
                            <select id="BranchId" name="BranchId" class="form-control" required>
                                <option value="">-- Select Branch --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.BranchList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="SalaryHeadId" class="form-label">Select Salary Head</label>
                            <select id="SalaryHeadId" name="SalaryHeadId" class="form-control" required>
                                <option value="">-- Select Salary Head --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.salaryHeadList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="MinYear" class="form-label">Min Year</label>
                            <input type="number" class="form-control" id="MinYear" name="MinYear" required>
                        </div>
                    </div>

                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary btn-sm me-2" id="btnSave">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
                function editGratuity(id, salaryHeadId, minYear, branchId) {
        document.getElementById("gratuityId").value = id;

        var salarySelect = document.getElementById("SalaryHeadId");
        if (salarySelect) salarySelect.value = salaryHeadId || "";

        var branchSelect = document.getElementById("BranchId");
        if (branchSelect) branchSelect.value = branchId || "";

        var minYearInput = document.getElementById("MinYear");
        if (minYearInput) minYearInput.value = minYear || "";

        document.getElementById("addPfContriModalLabel").textContent = "Edit Gratuity Calculate Setup";
        document.getElementById("modalSubmitText").textContent = "Update";
    }

    // SweetAlert for delete confirmation
    document.querySelectorAll('.deleteForm').forEach(function (form) {
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "This will permanently delete the record.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });

</script>

