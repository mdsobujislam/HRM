@model IEnumerable<HRM.Models.Attendance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Header -->
            <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-people-fill me-2"></i> Attendance
                </h5>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <form asp-action="InsertAttendence" method="post">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label for="EmployeeId" class="form-label fw-semibold">
                                <i class="bi bi-credit-card me-1"></i> Scratch your Card :
                            </label>
                            <input id="EmployeeId" name="EmployeeId" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter your card number" />
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-3 shadow-sm">
                                <i class="bi bi-arrow-right-circle me-1"></i> Go
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


