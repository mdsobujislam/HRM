@model IEnumerable<HRM.Models.RecommendLoanApplication>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">📋 Recommend Loan Application List</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="FromDate" class="form-label fw-semibold">From Date</label>
                            <input type="date" id="FromDate" name="FromDate" class="form-control"
                                   value="@Model?.FirstOrDefault()?.FromDate ?? DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3">
                            <label for="ToDate" class="form-label fw-semibold">To Date</label>
                            <input type="date" name="FromDate" class="form-control"
                                   value="@DateTime.Today.ToString("MM/dd/yyyy")" />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-eye"></i> Show
                            </button>
                            <button type="reset" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-x-circle"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Loan List</h5>
                @* <button class="btn btn-primary btn-sm" id="addNewData" data-bs-toggle="modal"
                        data-bs-target="#addSalaryHeadModal">
                    <i class="fas fa-plus"></i> Add New
                </button> *@
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead class="table-primary">
                            <tr>
                                <th>SL No.</th>
                                <th>Empp Id</th>
                                <th>Employee Name</th>
                                <th>Appli Date</th>
                                <th>Branch</th>
                                <th>Designation</th>
                                <th>Department</th>
                                <th>BasicSalary</th>
                                <th>Grade</th>
                                <th>AmountLoan</th>
                                <th>Joining Duration</th>
                                <th>RecommendedAmount</th>
                                <th>RecommendDate</th>
                                <th>PreviousLoan</th>
                                <th>Repaid</th>
                                <th>Hr_Rem</th>
                                <th>LoanApproved</th>
                                <th>LoanAppDate</th>
                                <th>Term</th>
                                <th>interest</th>
                                <th>AppStatus</th>
                                <th>LoanIssued</th>
                                <th>LoanId</th>
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                                foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <form asp-action="Update" method="post" class="submitForm">
                                        <td>@index</td>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.EmployeeName</td>
                                        <td>@item.AppliDate</td>
                                        <td>@item.Branch</td>
                                        <td>@item.Designation</td>
                                        <td>@item.Department</td>
                                        <td>@item.BasicSalary</td>
                                        <td>
                                            <input type="text" name="Grade" value="@item.Grade" class="form-control" style="width:150px;" />
                                        </td>
                                        <td>@item.AmountLoan</td>
                                        <td>@item.Duration</td>
                                        <td>
                                            <input type="text" name="RecommendedAmount" value="@item.RecommendedAmount" class="form-control" />
                                        </td>
                                        <td>@item.RecommendDate</td>
                                        <td>@item.PreviousLoan</td>
                                        <td>@item.Repaid</td>
                                        <td>
                                            <input type="text" name="Hr_Rem" value="@item.Hr_Rem" class="form-control" style="width:150px;" />
                                        </td>
                                        <td>@item.LoanApproved</td>
                                        <td>@item.LoanAppDate</td>
                                        <td>@item.Term</td>
                                        <td>@item.interest</td>
                                        <td>@item.AppStatus</td>
                                        <td>@item.LoanIssued</td>
                                        <td>@item.LoanId</td>
                                        <td>@item.Remarks</td>
                                        <td>
                                            
                                                <input type="hidden"id="ID" name="ID" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Submit
                                                </button>
                                            
                                        </td>
                                        </form>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

<script>
    $(function(){
        $('.datepicker').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        });
        // Set default date to today
        $('#FromDate').datepicker('setDate', new Date());
        $('#ToDate').datepicker('setDate', new Date());
    });



        document.querySelectorAll('.submitForm').forEach(function (form) {
                form.addEventListener('submit', function (e) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "This will Recommend Loan Application.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Yes, submit it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });

</script>
}