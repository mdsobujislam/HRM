@model IEnumerable<HRM.Models.LeaveApplication>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Leave List</h5>
    <button class="btn btn-primary btn-sm" id="addNewData" data-bs-toggle="modal"
            data-bs-target="#addDepartmentModal">
        <i class="fas fa-solid fa-plus"></i> Add New
    </button>
</div>

<div class="col-md-12">
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table  datanew">
                    <thead class="table-primary">
                        <tr>
                            <th>SL No.</th>
                            <th>Leave Type</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Days</th>
                            <th>Details</th>
                            <th>Status by ImmediateBoss</th>
                            <th>Status by HR</th>
                            <th>Documents</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var item in Model)
                        {
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@item.LeaveType</td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                                <td>@item.NumberOfDays</td>
                                <td>@item.Reason</td>
                                <!-- Immediate Boss Status -->
                                <td>
                                    @if (item.ApprovedByImmediateBossStatus == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Approved</span>
                                    }
                                </td>

                                <!-- HR Status -->
                                <td>
                                    @if (item.ApprovedByHRStatus == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Approved</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FilePaths))
                                    {
                                        var files = item.FilePaths.Split(',');
                                        foreach (var file in files)
                                        {
                                            var fileName = System.IO.Path.GetFileName(file);
                                            <a href="@file" class="btn btn-sm btn-outline-primary me-1" download>
                                                <i class="bi bi-download"></i> @fileName
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Document</span>
                                    }
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addDepartmentModal" tabindex="-1" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-dark" style="background : green">
                <h5 class="modal-title" id="addDepartmentModalLabel" style="color:white">Create Leave Application</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateLeaveApplication" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id">


                    <div class="row">

                        <div class="col-md-12 mb-3">
                            <label for="LeaveTypeId" class="form-label">Select LeaveType</label>
                            <select id="LeaveTypeId" name="LeaveTypeId" class="form-control" required>
                                <option value="">-- Select LeaveType --</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.LeaveTypeList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12 mb-3">
                            <label for="StartDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate">
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12 mb-3">
                            <label for="EndDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="EndDate" name="EndDate">
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12 mb-3">
                            <label for="Reason" class="form-label">Reason</label>
                            <textarea class="form-control" id="Reason" name="Reason" required placeholder="Enter Reason Here..." rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Documents</label>

                        <div id="documentContainer">
                            <div class="input-group mb-2">
                                <input type="file" class="form-control" name="Documents" id="Documents">
                                <button type="button" class="btn btn-danger remove-doc" style="display:none;">Remove</button>
                            </div>
                        </div>

                        <button type="button" class="btn btn-success btn-sm" id="addMoreDocuments">
                            <i class="bi bi-plus-circle"></i> Add More
                        </button>
                    </div>

                    @* <div class="col-md-12 mb-3">
                        <label for="Documents" class="form-label">Documents</label>
                        <input type="file" class="form-control" id="Documents" name="Documents" multiple>
                        <small class="text-muted">You can select multiple files</small>
                    </div> *@

                    
                    <div class="d-flex">
                        <button type="submit" class="btn btn-success btn-sm me-2">
                            <i class="bi bi-check-circle"></i> <span id="modalSubmitText">Submit</span>
                        </button>
                        <button type="reset" class="btn btn-secondary btn-sm me-2">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('addMoreDocuments').addEventListener('click', function () {
            const container = document.getElementById('documentContainer');

            // নতুন file input তৈরি
            const newInputGroup = document.createElement('div');
            newInputGroup.className = 'input-group mb-2';
            newInputGroup.innerHTML = `
                <input type="file" class="form-control" name="Documents">
                <button type="button" class="btn btn-danger remove-doc">Remove</button>
            `;

            // container-এ যোগ করা
            container.appendChild(newInputGroup);
        });

        // Remove button কাজ করবে
        document.addEventListener('click', function (e) {
            if (e.target && e.target.classList.contains('remove-doc')) {
                e.target.parentElement.remove();
            }
        });
    </script>
}